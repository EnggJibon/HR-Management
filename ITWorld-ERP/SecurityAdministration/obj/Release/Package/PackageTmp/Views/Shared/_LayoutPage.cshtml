<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/common.js"></script>
    <link href="~/Content/2013.2.611/telerik.common.min.css" rel="stylesheet" />
    <link href="~/Content/2013.2.611/telerik.vista.min.css" rel="stylesheet" />
    @RenderSection("scripts", false)
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/kendo/2014.1.528/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2014.1.528/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/kendo/2014.1.528/kendo.default.min.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/kendo/2014.1.528/kendo.silver.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2014.1.528/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/kendo/2014.1.528/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2014.1.528/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2014.1.528/kendo.aspnetmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>

</head>

<body data-offset="40">
    <header>
        <div id="header-roof">
            <div class="container content">
                <div class="col-md-12">
                    <div class="pull-right" style="margin-right: -30px;">
                        <br />
                        <a href="#">Sign up</a>
                        <span class="bar">|</span>
                        <a href="#">Help</a>
                        <span class="bar">|</span>
                        @*<div id="headerBeforeLogin">*@
                        @(!Convert.ToBoolean(Session["IsLogged"]) ? Html.Partial("_LoginPanel") : Html.Partial("_LogoutPanel"))
                        @*</div>*@
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div id="header-body">
        <div class="container content">
            <div class="row">
                <div class="col-md-12">
                    @if (Convert.ToBoolean(Session["IsLogged"]))
                    {
                        Html.RenderPartial("_Menu");
                    }
                </div>
            </div>
        </div>
    </div>

    <div id="middle">
        <div class="container content">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div id="footer-upper">
            <div class="container content">
                <fieldset class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-4">
                            <h3>Features</h3>
                            <p>
                                •	Money transfer from one account to another from one bank to another<br />
                                •	Accept Payment through website and mobile money for selling products<br />
                                •	Facilitate Seller to integrate NUS Pay API for payment confirmation message<br />
                                <a href="../Home.aspx">Read more...</a>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <h3>Why We Different</h3>
                            <p>
                                Our payment gateway links your website to processing network and merchant account. Like most gateways, Payflow payment gateway handles all major credit cards. What makes our gateway different is the low rates and incremental sales boost from offering PayPal and
                                Bill Me Later ® payment options on your site.
                            </p>
                        </div>
                        <div class="col-md-4">
                            <h3>Site Link</h3>
                            <p>
                                <a href="index.html">Home</a> | <a href="../Home.aspx">Sitemap</a> | <a href="../Home.aspx">Contact Us</a> | <a href="../Home.aspx">About Us</a>
                            </p>
                        </div>
                        </div>
                </fieldset>                
            </div>
        </div>
        <div id="footer-lower">
            <div class="container content">
                
                &copy;   <a href="http://itworldbd.net/" target="_blank">IT-World @DateTime.Now.Year. </a> All rights reserved.
            </div>
        </div>
    </footer>
    <script type="text/javascript">
        $(document)
    </script>

</body>
</html>
