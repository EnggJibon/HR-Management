            <input id="btnSignIn" class="btn btn-primary" style="margin-top:.75em;width: 100%; height: 32px; font-size: 13px;" type="button" name="commit" value="Sign In">
            <div class="field-validation-error">
                <label id="Message" style="color: red;"></label>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSignIn').click(function () {
            var loginId = $('#inputEmail').val();
            var loginPassword = $('#inputPassword').val();

            $.ajax({
                type: "POST",
                url: '@Url.Action("Login", "General")',
                data: { loginID: loginId, password: loginPassword },
                cache: false,
                success: function (data) {
                    if (data.val == 1) {
                        $('#Message').html(data.result);
                        window.location = data.url;
                    }
                    else if (data.val == 2) {
                        $('#Message').html(data.result);
                        window.location = data.url;
                    }
                    else if (data.val == 3) {
                        $('#Message').html(data.result);
                        window.location = data.url;
                    }

                    //location.reload();
                    //$('#headerBeforeLogin').hide();

                    @*if (data.Check == 3) {
                        @Url.Action("ChangePassword","Home")

                    }*@
                    return false;
                },
                error: function (data) {
                    console.log(data);
                    $('#Message').html(data.Message);
                    return false;
                }
            });
        });

        $('#signInLink').click(function () {
            $('#loginPanel').toggle();
        });
        $('#btnSignIn').click(function () {
            $('#loginPanel').hide();
            $('#signInLink').before();
        });

