<div class="navbar-collapse collapse pull-right" id="loginHeader" style="position: fixed; margin-top: 13px; margin-left: 125px;">
    <div id="loginPanel" class="dropdown-menu" style="padding: 10px; -moz-min-width: 240px; -ms-min-width: 240px; -o-min-width: 240px; -webkit-min-width: 240px; min-width: 240px;">
        <form action="" method="post" role="form" class="form-horizontal">
            <input class="form-control" id="inputEmail" placeholder="Email" type="text" style="margin-bottom:.5em">
            <input class="form-control" id="inputPassword" placeholder="Password" type="password" style="margin-bottom:.7em">
