@using ERP.HRM.ViewModel
@model AnnualHolidayCategoryViewModel
@{
    ViewBag.Title = "Annual Holiday Category Setup";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @functions{
        public string TokenHeaderValue()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }
    @Html.Hidden("tokenHeader", TokenHeaderValue())
    
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Annual Holiday Category Setup
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Annual Holiday Category </label>
                        @Html.HiddenFor(model => model.AnnualHolidayCategory.Id)
                        @Html.TextBoxFor(model => model.AnnualHolidayCategory.Title, new {@class = "form-control input-sm"})
                    </div>
                    <div class="col-md-6">
                        <label>Description</label>
                        @Html.TextBoxFor(model => model.AnnualHolidayCategory.Description, new {@class = "form-control input-sm"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Year</label>
                        @Html.TextBoxFor(model => model.AnnualHolidayCategory.Year, new {@class = "form-control input-sm"})
                    </div>
                    <div class="col-md-6">
                        <label>Is Active</label>
                        <div class="squaredFour">
                            <input type="checkbox" id="AnnualHolidayCategory_IsActive" />
                            <label for="AnnualHolidayCategory_IsActive"></label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick=" return clearData(); " />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}
<div class="panel panel-default">
    <div class="panel-heading">
        List of Annual Holiday Category
    </div>
    <div class="panel-grid">
        <div id="grid"></div>
    </div>
</div>

<div id="list-url" data-request-url="@Url.Action("List", "AnnualHolidayCategory")"></div>
<div id="get-url" data-request-url="@Url.Action("Get", "AnnualHolidayCategory")"></div>
<div id="save-url" data-request-url="@Url.Action("Save", "AnnualHolidayCategory")"></div>
<div id="delete-url" data-request-url="@Url.Action("Delete", "AnnualHolidayCategory")"></div>
@Scripts.Render("~/Scripts/HRM/AnnualHolidayCategory.js")

