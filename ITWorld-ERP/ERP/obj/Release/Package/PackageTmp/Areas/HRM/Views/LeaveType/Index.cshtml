@using ERP.HRM.ViewModel

@model LeaveTypeViewModel
@{
    ViewBag.Title = "Leave Type Setup";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            LeaveType Setup
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Leave</label>
                        @Html.HiddenFor(model => model.LeaveType.Id)
                        @Html.DropDownListFor(model => model.LeavePolicyList, Model.LeavePolicyList, "--Select--", new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Name</label>
                        @Html.TextBoxFor(model => model.LeaveType.Name, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>NumberOfDays</label>
                        @Html.TextBoxFor(model => model.LeaveType.NumberOfDays, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Description</label>
                        @Html.TextBoxFor(model => model.LeaveType.Description, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label> Is Active</label>
                        @Html.CheckBoxFor(model => model.LeaveType.IsActive)
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}
<div class="panel panel-default">
    <div class="panel-heading">
        List of LeaveType
    </div>
    <div class="panel-grid">
        <div id="grid"></div>
    </div>
</div>

<div id="list-url" data-request-url="@Url.Action("List", "LeaveType")"></div>
<div id="get-url" data-request-url="@Url.Action("Get", "LeaveType")"></div>
<div id="save-url" data-request-url="@Url.Action("Save", "LeaveType")"></div>
<div id="delete-url" data-request-url="@Url.Action("Delete", "LeaveType")"></div>

@Scripts.Render("~/Scripts/HRM/LeaveType.js")
<script src="@Url.Content("~/Scripts/Library/bootstrap-datetimepicker.js")"></script>
<link href="@Url.Content("~/Content/bootstrap-datetimepicker.css")" rel="stylesheet" />

