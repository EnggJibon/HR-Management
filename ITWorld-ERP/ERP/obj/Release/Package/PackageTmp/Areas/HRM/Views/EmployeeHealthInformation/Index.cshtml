@using ERP.HRM.ViewModel

@model EmployeeHealthInformationViewModel

@{
    ViewBag.Title = "Employee Health Information";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Employee Health Information
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
            @Html.HiddenFor(model => model.EmployeeHealthInformation.Id)
        </div>
        <div class="panel-body">
            
            <fieldset class="form-horizontal" disabled="disabled">
                <div class="divHighlight col-md-12">
                    <div class="form-group">
                        <div class="col-md-6" style="display:none;">
                            <label>Employee Id</label>
                            @Html.TextBoxFor(model => model.EmployeeHealthInformation.EmployeeId, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Code</label>
                            @Html.TextBoxFor(model => model.EmployeeHealthInformation.Employee.EmployeeCode, Model.EmployeeHealthInformation.Employee.EmployeeCode, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Name</label>
                            @Html.TextBoxFor(model => model.EmployeeHealthInformation.Employee.EmployeeName, Model.EmployeeHealthInformation.Employee.EmployeeName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Department Name</label>
                            @Html.TextBoxFor(model => model.EmployeeHealthInformation.Employee.DepartmentName, Model.EmployeeHealthInformation.Employee.DepartmentName, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Designation Name</label>
                            @Html.TextBoxFor(model => model.EmployeeHealthInformation.Employee.DesignationName, Model.EmployeeHealthInformation.Employee.DesignationName, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
            </fieldset>
            
            <fieldset class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-6">
                        <label>Age</label>

                        @Html.TextBoxFor(model => model.EmployeeHealthInformation.Age, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Height</label>
                        @Html.TextBoxFor(model => model.EmployeeHealthInformation.Height, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Weight</label>
                        @Html.TextBoxFor(model => model.EmployeeHealthInformation.Weight, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Blood Group</label>
                        @Html.TextBoxFor(model => model.EmployeeHealthInformation.BloodGroup, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Disease</label>
                        @Html.TextBoxFor(model => model.EmployeeHealthInformation.Disease, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Disease Status</label>
                        @Html.TextBoxFor(model => model.EmployeeHealthInformation.DiseaseStatus, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Disease Note</label>
                        @Html.TextAreaFor(model => model.EmployeeHealthInformation.DiseaseNote, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Identified Symbol</label>
                        @Html.TextAreaFor(model => model.EmployeeHealthInformation.IdentifiedHealthSymbol, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="label-checkbox">Is Active</label>
                        @Html.CheckBoxFor(model => model.EmployeeHealthInformation.IsActive)
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}


<div id="myModal" class="modal fade">
    @Html.Partial("_ConfirmationView")
</div>


