@using ERP.HRM.ViewModel
@model EmployeeEducationalQualificationViewModel

@{
    ViewBag.Title = "Employee Educational Qualification";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Employee Educational Qualification
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
            @Html.HiddenFor(model => model.EmployeeEducationalQualification.Id)
        </div>

        <div class="panel-body">
            
            
            <fieldset class="form-horizontal" disabled="disabled">
                <div class="divHighlight col-md-12">
                    <div class="form-group">
                        <div class="col-md-6" style="display:none;">
                            <label>Employee Id</label>
                            @Html.TextBoxFor(model => model.EmployeeEducationalQualification.EmployeeId, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Code</label>
                            @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Employee.EmployeeCode, Model.EmployeeEducationalQualification.Employee.EmployeeCode, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Name</label>
                            @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Employee.EmployeeName, Model.EmployeeEducationalQualification.Employee.EmployeeName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Department Name</label>
                            @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Employee.DepartmentName, Model.EmployeeEducationalQualification.Employee.DepartmentName, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Designation Name</label>
                            @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Employee.DesignationName, Model.EmployeeEducationalQualification.Employee.DesignationName, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
            </fieldset>
            


            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Certification</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Certification, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Country</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Country, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Board</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Board, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Institute</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Institute, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Passing Year</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.PassingYear, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Duration</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Duration, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Subject</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Subject, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Division/Class/GPA</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.DivisionClassGPA, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Marks</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.Marks, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Out of</label>
                        @Html.TextBoxFor(model => model.EmployeeEducationalQualification.OutOf, new { @class = "form-control input-sm" })
                    </div>
                </div>
             
                <div class="form-group">
                    <div class="col-md-6">
                        <label> Is Active</label>
                        @Html.CheckBoxFor(model => model.EmployeeEducationalQualification.IsActive)
                    </div>
                </div>

            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}


<div id="myModal" class="modal fade">
    @Html.Partial("_ConfirmationView")
</div>


<div class="panel panel-default">
    <div class="panel-heading">
        List of Employee Educational Qualification
    </div>
    <div class="panel-grid">
        <div id="grid"></div>
    </div>
</div>

<div id="list-url" data-request-url="@Url.Action("List", "EmployeeEducationalQualification")"></div>
<div id="get-url" data-request-url="@Url.Action("Get", "EmployeeEducationalQualification")"></div>
<div id="save-url" data-request-url="@Url.Action("Save", "EmployeeEducationalQualification")"></div>
<div id="delete-url" data-request-url="@Url.Action("Delete", "EmployeeEducationalQualification")"></div>

@Scripts.Render("~/Scripts/HRM/EmployeeEducationalQualification.js")
