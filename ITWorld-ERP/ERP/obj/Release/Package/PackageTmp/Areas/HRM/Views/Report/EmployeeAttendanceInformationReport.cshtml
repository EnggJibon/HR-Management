@using ERP.HRM.ViewModel

@model EmployeeAttendanceInformationViewModel

@{
    ViewBag.Title = "Employee Attendance Information";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Employee Health Information
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
            @Html.HiddenFor(model => model.EmployeeAttendanceInformation.Id)
        </div>
        <div class="panel-body">

            <fieldset class="form-horizontal" disabled="disabled">
                <div class="divHighlight col-md-12">
                    <div class="form-group">
                        <div class="col-md-6" style="display:none;">
                            <label>Employee Id</label>
                            @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.EmployeeId, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Code</label>
                            @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.Employee.EmployeeCode, Model.EmployeeAttendanceInformation.Employee.EmployeeCode, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Name</label>
                            @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.Employee.EmployeeName, Model.EmployeeAttendanceInformation.Employee.EmployeeName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Department Name</label>
                            @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.Employee.DepartmentName, Model.EmployeeAttendanceInformation.Employee.DepartmentName, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Designation Name</label>
                            @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.Employee.DesignationName, Model.EmployeeAttendanceInformation.Employee.DesignationName, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-6">
                        <label>Date</label>

                        @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.Date, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Punch In</label>
                        @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.PunchInTime, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Punch Out</label>
                        @Html.TextBoxFor(model => model.EmployeeAttendanceInformation.PunchOutTime, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label class="label-checkbox">Is Active</label>
                        @Html.CheckBoxFor(model => model.EmployeeAttendanceInformation.IsActive)
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}


<div id="myModal" class="modal fade">
    @Html.Partial("_ConfirmationView")
</div>


<div class="panel panel-default">
        <div class="panel-heading">
            List of Employee Attendance Information
        </div>
        <div class="panel-grid">
            <div id="grid"></div>
        </div>
    </div>

<div id="list-url" data-request-url="@Url.Action("List", "EmployeeAttendanceInformation")"></div>
<div id="get-url" data-request-url="@Url.Action("Get", "EmployeeAttendanceInformation")"></div>
<div id="save-url" data-request-url="@Url.Action("Save", "EmployeeAttendanceInformation")"></div>
@*<div id="delete-url" data-request-url="@Url.Action("Delete", "Department")"></div>*@

@Scripts.Render("~/Scripts/HRM/EmployeeAttendanceInformation.js")

