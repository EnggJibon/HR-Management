@using ERP.HRM.ViewModel
@model EmployeeFamilyMemberViewModel

@{
    ViewBag.Title = "Employee Family Member";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Employee Family Member
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
            @Html.HiddenFor(model => model.EmployeeFamilyMember.Id)
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal" disabled="disabled">
                <div class="divHighlight col-md-12">
                    <div class="form-group">
                        <div class="col-md-6" style="display:none;">
                            <label>Employee Id</label>
                            @Html.TextBoxFor(model => model.EmployeeFamilyMember.EmployeeId, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Code</label>
                            @Html.TextBoxFor(model => model.EmployeeFamilyMember.Employee.EmployeeCode, Model.EmployeeFamilyMember.Employee.EmployeeCode, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Employee Name</label>
                            @Html.TextBoxFor(model => model.EmployeeFamilyMember.Employee.EmployeeName, Model.EmployeeFamilyMember.Employee.EmployeeName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Department Name</label>
                            @Html.TextBoxFor(model => model.EmployeeFamilyMember.Employee.DepartmentName, Model.EmployeeFamilyMember.Employee.DepartmentName, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-6">
                            <label>Designation Name</label>
                            @Html.TextBoxFor(model => model.EmployeeFamilyMember.Employee.DesignationName, Model.EmployeeFamilyMember.Employee.DesignationName, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Name</label>

                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Name, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Designation</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Designation, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Relation</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Relation, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>JobLocation</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.JobLocation, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Occupation</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Occupation, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>National Id</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.NationalId, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Organization</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Organization, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Phone</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Phone, new { @class = "form-control input-sm" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Mobile</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Mobile, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Email</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Email, new { @class = "form-control input-sm" })
                    </div>
                </div>
                
                
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Passport</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.Passport, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>AddressId</label>
                        @Html.TextBoxFor(model => model.EmployeeFamilyMember.AddressId, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <label class="label-checkbox">Is Active</label>
                        @Html.CheckBoxFor(model => model.EmployeeFamilyMember.IsActive)
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}

<div id="myModal" class="modal fade">
    @Html.Partial("_ConfirmationView")
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        List of Employee Family Member
    </div>
    <div class="panel-grid">
        <div id="grid"></div>
    </div>
</div>

<div id="list-url" data-request-url="@Url.Action("List", "EmployeeFamilyMember")"></div>
<div id="get-url" data-request-url="@Url.Action("Get", "EmployeeFamilyMember")"></div>
<div id="save-url" data-request-url="@Url.Action("Save", "EmployeeFamilyMember")"></div>
<div id="delete-url" data-request-url="@Url.Action("Delete", "EmployeeFamilyMember")"></div>

@Scripts.Render("~/Scripts/HRM/EmployeeFamilyMember.js")