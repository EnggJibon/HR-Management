@using ERP.BLL.Security
@model ERP.Security.ViewModel.UserInformationViewModel

@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Employee Information
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="divHighlight col-md-12">
                    <div class="form-group">
                        <div class="col-md-6" style="display: none;">
                            <label>Employee Id</label>
                            @Html.TextBoxFor(model => model.UserInformation.Employee.Id, new { @class = "form-control input-sm" })
                        </div>
                        <div class="col-md-4">
                            <label>Employee Code</label>
                            @Html.TextBoxFor(model => model.UserInformation.Employee.EmployeeCode, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                        <div class="col-md-2">
                            @if (LoginInformation.UserInformation.UserTypeId != 4)
                            {
                                <script>
                                    $('#UserInformation_Employee_EmployeeCode').prop('disabled', false);
                                </script>
                                <br />
                                <input id="btnShowDetails" type="button" value="Show Details" class="btn btn-default" />
                            }
                        </div>
                        <div class="col-md-6">
                            <label>Employee Name</label>
                            @Html.TextBoxFor(model => model.UserInformation.Employee.EmployeeName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Department Name</label>
                            @Html.TextBoxFor(model => model.UserInformation.Employee.DepartmentName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                        <div class="col-md-6">
                            <label>Designation Name</label>
                            @Html.TextBoxFor(model => model.UserInformation.Employee.DesignationName, new { @class = "form-control input-sm", @disabled = "disabled" })
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="panel panel-default" id="divPassword">
        <div class="panel-heading">
            User Information Setup
            @Html.HiddenFor(model => model.UserInformation.Id)
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Old Password</label>
                        @Html.PasswordFor(model => model.UserInformation.OldPassword, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>New Password</label>
                        @Html.PasswordFor(model => model.UserInformation.NewPassword, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Confirm Password</label>
                        @Html.PasswordFor(model => model.UserInformation.ConfirmPassword, new { @class = "form-control input-sm" })
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}

<div id="get-by-employeeCode-url" data-request-url="@Url.Action("GetByEmployeeCode", "UserInformation")"></div>
<div id="save-url" data-request-url="@Url.Action("ChangePassword", "UserInformation")"></div>

@Scripts.Render("~/Scripts/Security/ChangePassword.js")