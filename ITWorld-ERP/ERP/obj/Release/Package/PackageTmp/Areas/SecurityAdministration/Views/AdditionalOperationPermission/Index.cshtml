@using ERP.Security.ViewModel

@model AdditionalOperationPermissionViewModel

@{
    ViewBag.Title = "Additional Operation Permission Setup ";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div data-alerts="alerts" id="message" data-titles="{}" data-ids="myid" data-fade="4000"></div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Additional Operation Permission Setup
            @Html.ValidationSummary(true)
            @Html.Hidden("hdnIsInsert", true)
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label>User</label>
                        @Html.HiddenFor(model => model.AdditionalOperationPermission.Id)
                        @Html.DropDownListFor(model => model.AdditionalOperationPermission.UserId, Model.UserList, "--Select--", new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label>Screen Operation</label>
                        @Html.DropDownListFor(model => model.AdditionalOperationPermission.ScreenOperationId, Model.ScreenOperationList, "--Select--", new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>Start Date</label>
                        @Html.TextBoxFor(model => model.AdditionalOperationPermission.StartDate, new { style = "width: 100%;" })
                    </div>
                    <div class="col-md-6">
                        <label> End Date</label>
                        @Html.TextBoxFor(model => model.AdditionalOperationPermission.EndDate, new { style = "width: 100%;" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label> Is Active</label>
                        @Html.CheckBoxFor(model => model.AdditionalOperationPermission.IsActive)
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default" />
                        <input type="button" value="Reset" class="btn btn-default" onclick="return clearData();" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}

<div class="panel panel-default">
    <div class="panel-heading">
        List of Additional Operation Permission
    </div>
    <div class="panel-grid">
        <div id="grid"></div>
    </div>
</div>

<div id="list-url" data-request-url="@Url.Action("List", "AdditionalOperationPermission")"></div>
<div id="get-url" data-request-url="@Url.Action("Get", "AdditionalOperationPermission")"></div>
<div id="save-url" data-request-url="@Url.Action("Save", "AdditionalOperationPermission")"></div>
<div id="delete-url" data-request-url="@Url.Action("Delete", "AdditionalOperationPermission")"></div>
@Scripts.Render("~/Scripts/Security/AdditionalOperationPermission.js")
